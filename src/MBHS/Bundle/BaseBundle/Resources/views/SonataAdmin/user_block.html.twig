{% block user_block %}
    <style>
        .user-block {
            padding: 20px;
        }
    </style>
    <div class="user-block row">
        <div class="col-md-4">
            <img src="{{ gravatar(app.user.email) }}" />
        </div>
        <div class="col-md-6">
            <a href="{{ path('admin_mbhs_base_user_edit', { 'id': app.user.id }) }}">Hello, {{ app.user }}</a>
            <br><br>
            <a href="{{ path('sonata_user_admin_security_logout') }}">Logout</a>
        </div>
    </div>
{% endblock %}
